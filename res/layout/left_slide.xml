<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/left_slide_width"
    android:layout_height="fill_parent"
    android:background="@color/content_bg">

    <LinearLayout
        android:layout_width="@dimen/left_slide_width"
        android:layout_height="fill_parent"
        android:background="@color/content_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:text="@string/left_slide_menu"
            android:textColor="#eeffffff"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector"
            android:drawableLeft="@drawable/more_ic_setting"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:text="@string/left_slide_menu_setting"
            android:textColor="#B1BCCA"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/black_color" />

        <TextView
            android:id="@+id/skins"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector"
            android:drawableLeft="@drawable/more_ic_theme"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium"
            android:text="@string/left_slide_menu_skin"
            android:textColor="#B1BCCA"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/black_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/title_bg"
            android:padding="@dimen/padding_medium"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_left_slide_city_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@drawable/setting_edit" />

            <ImageButton
                android:id="@+id/btn_left_slide_city_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_left_slide_city_setting"
                android:background="@drawable/setting_add"
                android:layout_marginRight="@dimen/margin_mini"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/left_slide_citylist"
                android:textColor="#eeffffff"
                android:textSize="@dimen/text_size_large"
                android:layout_toLeftOf="@id/btn_left_slide_city_add"/>
        </RelativeLayout>

        <ListView
            android:id="@+id/citylistView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg"
            android:divider="@null"
            android:dividerHeight="0px"
            android:cacheColorHint="@null"
            android:listSelector="@null" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/black_color" />
    </LinearLayout>

</RelativeLayout>